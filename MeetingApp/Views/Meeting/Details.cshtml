@using System.Net.Mime
@model UserInfo
@{
    ViewBag.Title = "Başvuru Detayı";
}
@{
    var className = @Model.WillAttend == true ? "primary" : "danger";
}
<main class="text-center">
    <h1 class="h4">
        <p>İsim:@Model.Name </p>
        <p> <span class="badge text-bg-@className ">
            @if (@Model.WillAttend == true)
            {
                <text>Katılıyor</text>
            }
            else
            {
                <text>Katılmıyor</text> 
            }
        </span></p>
        <p>Email:@Model.Email</p>
        <p>Telefon:@Model.Phone</p>
        <a asp-controller="Meeeting" asp-action="List" class="btn btn-outline-@className">Katılımcı Listesi</a>
    </h1>
</main>